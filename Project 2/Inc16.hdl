/**
 * 16-bit incrementer:
 * out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
    /*
    * Second input for the adder is just 1 bit at index 0 while index 1-15 are 0. Effectively adding 1 as a 16 bit number to the current number.
    */ 
    Add16(a=in, b[0]=true, out=out);
}
